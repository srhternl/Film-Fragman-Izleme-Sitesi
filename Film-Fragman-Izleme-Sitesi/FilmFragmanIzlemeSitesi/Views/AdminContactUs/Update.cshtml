@model FilmPuanlamaSitesi.Models.Siniflar.ContactUs
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-right:750px; margin-top:100px; color:aqua">
    <br />
    @using (Html.BeginForm("UpdateContactUs", "AdminContactUs", FormMethod.Post))
    {
        <label>ID</label>
        <br />
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label>Başlık</label>
        <br />
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        <br />
        <label>EMail</label>
        <br />
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        <label>Telefon Numarası</label>
        <br />
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
        <br />
        <label>Adres</label>
        <br />
        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
        <br />
        <div style="margin-top:10px;">
            <button class="btn btn-primary">Update Information</button>
        </div>
    }
</div>

