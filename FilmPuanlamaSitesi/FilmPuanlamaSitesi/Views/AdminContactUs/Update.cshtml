@model FilmPuanlamaSitesi.Models.Siniflar.ContactUs
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-right:750px; margin-top:100px;">
    <br />
    @using (Html.BeginForm("UpdateContactUs", "AdminContactUs", FormMethod.Post))
    {
        @Html.LabelFor(x => x.ID)
        <br />
        @Html.TextBoxFor(x => x.ID, new { @readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.Baslik)
        <br />
        @Html.TextBoxFor(x => x.Baslik)
        <br />
        @Html.LabelFor(x => x.Mail)
        <br />
        @Html.TextBoxFor(x => x.Mail)
        <br />
        @Html.LabelFor(x => x.Telefon)
        <br />
        @Html.TextBoxFor(x => x.Telefon)
        <br />
        @Html.LabelFor(x => x.Adres)
        <br />
        @Html.TextBoxFor(x => x.Adres)
        <br />
        <div style="margin-top:10px;">
            <button class="btn btn-primary">Update Information</button>
        </div>
    }
</div>

