@model FilmPuanlamaSitesi.Models.Siniflar.About
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-right:750px; margin-top:100px; color:aqua;">
    <br />
    @using (Html.BeginForm("UpdateAbout", "AdminAbout", FormMethod.Post))
    {
        <label>ID</label>
        <br />
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label>Başlık</label>
        <br />
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        <br />
        <label>Foto Url</label>
        <br />
        @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        <br />
        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        <br />
        <label>İstatistik</label>
        <br />
        @Html.TextBoxFor(x => x.Istatistik, new { @class = "form-control" })
        <div style="margin-top:10px;">
            <button class="btn btn-primary">Update About</button>
        </div>
    }
</div>


